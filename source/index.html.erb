<% data.blog.articles[0...5].each_with_index do |article, i| %>
  <article class="<%= (i == 0) ? 'first' : '' %>">
    <h1><a href="<%= article.path %>"><%= article.title %></a> <span><%= article[:date].strftime('%b %e %Y') %></span></h1>
    <%= article.summary %>
    
    <div class="more"><a href="<%= article.path %>">read on &raquo;</a></div>
  </article>
<% end %>