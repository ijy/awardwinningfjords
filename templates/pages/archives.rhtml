<h1>Archive: <%= @path %></h1>
<ul class="archives">
  <% if archives.length > 0 %>
    <% for entry in archives %>
      <li>
        <a href="<%= entry.path %>"><%= entry.title %></a>
        <span><%= entry[:date].strftime('%b %e') %></span>
      </li>
    <% end %>
  <% else %>
    There are no articles for this date.
  <% end %>
</ul>

